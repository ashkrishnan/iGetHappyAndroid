<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.singhrahuldeep.igethappy.views.carerecievers.CaregiverActivity">

        <ScrollView
                android:id="@+id/ScrollView01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                <ImageView
                        android:id="@+id/iv_back"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_icon"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"/>

                <ImageView
                        android:id="@+id/iv_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/dp_20"
                        app:layout_constraintTop_toBottomOf="@+id/iv_back"
                        app:srcCompat="@drawable/ic_social_care"
                        android:layout_width="@dimen/dp_130"
                        android:layout_height="@dimen/dp_130"/>

                <TextView
                        android:id="@+id/tv_caregiver_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_image"
                        android:layout_marginTop="@dimen/dp_20"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_20"
                        android:textAlignment="center"
                        android:textSize="@dimen/dp_30"
                        android:textColor="@color/black"
                        android:text="@string/want_caregiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_caregiver_text2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_caregiver_text"
                        android:layout_marginTop="@dimen/dp_20"
                        android:paddingStart="@dimen/dp_40"
                        android:paddingEnd="@dimen/dp_40"
                        android:textAlignment="center"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/gray"
                        android:text="@string/caregiver_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/btn_continue"
                        app:layout_constraintTop_toBottomOf="@+id/tv_caregiver_text2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_20"
                        android:textAllCaps="false"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/ic_login_button"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/padding_login_button"
                        android:text="@string/yes"
                        android:textColor="@color/white_color"/>

                <Button
                        android:id="@+id/btn_skip"
                        app:layout_constraintTop_toBottomOf="@+id/btn_continue"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:textAllCaps="false"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/round_button_layout"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/padding_login_button"
                        android:text="@string/skip"
                        android:textColor="@color/white_color"/>

                <TextView
                        android:id="@+id/tv_caregiver_text3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_skip"
                        android:layout_marginTop="@dimen/dp_20"
                        android:paddingStart="@dimen/dp_30"
                        android:paddingEnd="@dimen/dp_30"
                        android:paddingBottom="@dimen/dp_20"
                        android:textAlignment="center"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        android:text="@string/caregiver_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>